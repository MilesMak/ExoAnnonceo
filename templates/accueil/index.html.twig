{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }} | ANNONCEO{% endblock %}

{% block body %}
    {% include 'navbar.html.twig' %}

    <!-- **** Recherche par critères **** -->
    <div class="home-search-form-area wow fadeInUp mt-3" data-wow-delay="200ms">
        <div class="container">
            <div class="home-search-form">
                <form action="#" method="post">
                    <div class="row">
                        <div class="col-12 col-lg-10">
                            <div class="row">
                                <div class="col-12 col-md-6 col-lg-3">
                                    <select name="types" id="types" class="form-control">
                                        <option value="category">Catégories</option>
                                        <option value="all-categorys">Toutes les catégories</option>
                                        <option value="auto">Auto</option>
                                        <option value="moto">Moto</option>
                                        <option value="immobilier">Immobilier</option>
                                    </select>
                                </div>
                                <div class="col-12 col-md-6 col-lg-3">
                                    <select name="localisation" id="localisation" class="form-control">
                                        <option value="regions">Régions</option>
                                        <option value="all-regions">Toutes les régions</option>
                                        <option value="ile-de-france">Île-de-France</option>
                                        <option value="bretagne">Bretagne</option>
                                        <option value="centre">Centre</option>
                                    </select>
                                </div>
                                <div class="col-12 col-md-6 col-lg-3">
                                    <select name="member" id="member" class="form-control">
                                        <option value="membre">Membres</option>
                                        <option value="all-members">Tous les membres</option>
                                        <option value="professionnels">Professionnels</option>
                                        <option value="particuliers">Particuliers</option>
                                    </select>
                                </div>
                                <div class="col-12 col-md-6 col-lg-3">
                                    <select name="trieprix" id="trieprix" class="form-control">
                                        <option value="trier-prix">Trier par prix</option>
                                        <option value="croissant">Du - cher au + cher</option>
                                        <option value="decroissant">Du + cher au - cher</option>
                                    </select>
                                </div>

                                <div class="col-12 col-md-6 col-lg-3">
                                    <div class="slider-range mb-15">
                                        <div class="range-price text-white">Price [30000 - 150000]$</div>
                                        <div class="slider-range-price ui-slider ui-slider-horizontal ui-widget ui-widget-content ui-corner-all" data-min="0" data-max="200000" data-unit="$" data-value-min="30000" data-value-max="150000" data-label-result="Price">
                                            <div class="ui-slider-range ui-widget-header ui-corner-all"></div>
                                            <span class="ui-slider-handle ui-state-default ui-corner-all" tabindex="0"></span>
                                            <span class="ui-slider-handle ui-state-default ui-corner-all" tabindex="0"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6 col-lg-3">
                                    <div class="slider-range mb-15">
                                        <div class="range-size text-white">Size [9762 - 72063]sqFt</div>
                                        <div data-min="0" data-max="98623" data-unit="sqFt" class="slider-range-size ui-slider ui-slider-horizontal ui-widget ui-widget-content ui-corner-all" data-value-min="9762" data-value-max="72063" data-label-result="Size">
                                            <div class="ui-slider-range ui-widget-header ui-corner-all"></div>
                                            <span class="ui-slider-handle ui-state-default ui-corner-all" tabindex="0"></span>
                                            <span class="ui-slider-handle ui-state-default ui-corner-all" tabindex="0"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-2">
                            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Rechercher</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="justify-content-center">
        <section class="section has-background-white-ter align-content-center">
            <h2 class="subtitle">Rechercher</h2>
            {{ form_start(search_form) }}
            <button class="button is-primary is-fullwidth" type="submit">Rechercher</button>
            {{ form_end(search_form) }}
        </section>
    </div>

{% endblock %}
